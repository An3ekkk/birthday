  <div id="emoji-root"></div>
  <div class="floating-hearts" id="floating-hearts"></div>
  <div class="music-control" id="music-control" title="Play/Pause Music">
    <i data-feather="music" class="w-6 h-6"></i>
  </div>
  <script>
    feather.replace();

    // Background music
    const audio = new Audio('https://cdn.pixabay.com/download/audio/2021/10/25/audio_172d7dec2c.mp3?filename=soft-piano-100-bpm-121529.mp3');
    audio.loop = true;
    let isPlaying = false;

    const musicControl = document.getElementById('music-control');
    musicControl.addEventListener('click', () => {
      if (isPlaying) {
        audio.pause();
        musicControl.innerHTML = '<i data-feather="music" class="w-6 h-6"></i>';
      } else {
        audio.play().catch(e => console.log('Audio play failed:', e));
        musicControl.innerHTML = '<i data-feather="pause" class="w-6 h-6"></i>';
      }
      isPlaying = !isPlaying;
      feather.replace();
    });

    // Floating hearts
    function createFloatingHearts() {
      const container = document.getElementById('floating-hearts');
      for (let i = 0; i < 15; i++) {
        const heart = document.createElement('div');
        heart.className = 'floating-heart';
        heart.textContent = 'üíñ';
        heart.style.left = Math.random() * 100 + 'vw';
        heart.style.top = Math.random() * 100 + 'vh';
        heart.style.animationDelay = Math.random() * 6 + 's';
        heart.style.fontSize = (16 + Math.random() * 24) + 'px';
        container.appendChild(heart);
      }
    }

    // Timer
    const START = new Date("2023-11-30T00:00:00");
    function updateTimer(){
      const now = new Date();
      const diff = now - START;
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
      const minutes = Math.floor((diff / (1000 * 60)) % 60);
      document.getElementById('days').textContent = days;
      document.getElementById('hours').textContent = hours;
      document.getElementById('minutes').textContent = minutes;
    }
    updateTimer();
    setInterval(updateTimer, 1000);

    // Enhanced emoji rain with more effects
    const emojiMap = { 
      hug:"ü§ó", kiss:"üíã", heart:"‚ù§Ô∏è", star:"‚≠ê",
      sparkle:"‚ú®", flower:"üå∏", fire:"üî•", gift:"üéÅ"
    };

    function spawnEmoji(char){
      const e=document.createElement('div');
      e.className='emoji';
      e.textContent=char;
      e.style.left=Math.random()*95+'vw';
      e.style.fontSize=24+Math.random()*48+'px';
      e.style.animationDuration=(4+Math.random()*4)+'s';
      e.style.setProperty('--drift',(Math.random()-0.5)*180+'px');
      e.style.opacity=0.8+Math.random()*0.2;
      document.body.appendChild(e);
      e.addEventListener('animationend',()=>e.remove());
    }

    function emojiRain(type,count=80){
      const char=emojiMap[type]||emojiMap.heart;
      const additionalChars = ['‚ú®','üíñ','üåü','üéâ'];
      for(let i=0;i<count;i++){
        setTimeout(()=>{
          spawnEmoji(char);
          // Add some variety
          if (i % 5 === 0) {
            spawnEmoji(additionalChars[Math.floor(Math.random() * additionalChars.length)]);
          }
        },i*40);
      }
    }

    const surpriseEl=document.getElementById('surprise');
    const surpriseTextEl=document.getElementById('surprise-text');

    const messages={
      "hug-btn":"Sending you the warmest, most loving hug ü§ó wrapped in all my affection and care.",
      "kiss-btn":"Mwah!I could spend forever chasing that moment right before our lips meet. üíãüíû My heart beats only for you.",
      "message-btn":"You're my forever person, my soulmate, my everything. My heart belongs to you, always and forever and The way you look at me makes ordinary days feel cinematic ‚ù§Ô∏è",
      "memory-btn":"That magical night we laughed until tears streamed down our faces ‚Äî forever etched in my heart as my favorite memory üåôüí´"
    };

    function showMessage(id,type,count){
      surpriseTextEl.textContent=messages[id];
      surpriseEl.classList.remove('hidden');
      surpriseEl.classList.add('show');
      emojiRain(type,count);
      surpriseEl.scrollIntoView({behavior:"smooth"});
      
      // Add subtle background pulse effect
      document.body.style.animation = 'pulse 2s ease';
      setTimeout(() => {
        document.body.style.animation = '';
      }, 2000);
    }

    document.getElementById('hug-btn').onclick=()=>showMessage('hug-btn','hug',60);
    document.getElementById('kiss-btn').onclick=()=>showMessage('kiss-btn','kiss',70);
    document.getElementById('message-btn').onclick=()=>showMessage('message-btn','heart',80);
    document.getElementById('memory-btn').onclick=()=>showMessage('memory-btn','star',60);

    // Enhanced Secret Message logic
    document.getElementById('send-secret').onclick=()=>{
      const input=document.getElementById('secret-input');
      const text=input.value.trim();
      if(!text){
        input.animate([
          {transform:'translateX(0)', opacity:1},
          {transform:'translateX(-10px)', opacity:0.8},
          {transform:'translateX(10px)', opacity:0.8},
          {transform:'translateX(0)', opacity:1}
        ],{duration:400, easing:'ease-in-out'});
        return;
      }
      surpriseEl.classList.remove('hidden');
      surpriseEl.classList.add('show');
      surpriseTextEl.textContent = "üíå Your Secret Message: " + text;
      emojiRain('heart',120);
      input.value='';
      setTimeout(()=>{
        surpriseEl.scrollIntoView({behavior:"smooth", block:"center"});
        if (!isPlaying) {
          musicControl.click(); // Auto-play music on first interaction
        }
      },300);
    };

    document.getElementById('secret-input').addEventListener('keydown',e=>{
      if(e.key==='Enter'){e.preventDefault();document.getElementById('send-secret').click();}
    });

    // Initialize floating hearts
    createFloatingHearts();

    // Auto-start music after user interaction
    document.addEventListener('click', function initMusic() {
      if (!isPlaying) {
        musicControl.click();
      }
      document.removeEventListener('click', initMusic);
    }, { once: true });
  </script>
</body>
</html>
